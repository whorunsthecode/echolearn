{
  "name": "echolearn",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "MVP web application that transforms classroom audio into customizable, dyslexia-friendly study materials",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon server/index.js",
    "dev:frontend": "vite",
    "build": "echo 'Backend build complete - no build step needed'",
    "build:frontend": "vite build",
    "build:backend": "echo 'Backend build complete'",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "start": "node server/index.js",
    "postbuild": "echo 'Build complete'",
    "vercel-build": "npm run build:frontend"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@headlessui/react": "^2.2.4",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "framer-motion": "^12.23.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.300.0",
    "mongoose": "^8.0.3",
    "opencv.js": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.60.0",
    "styled-components": "^6.1.8",
    "tesseract.js": "^5.0.4",
    "winston": "^3.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
